<Page x:Class="TestFormatter.Pages.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestFormatter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LandingPage" Background="AliceBlue">

    <StackPanel>
        <TextBlock Text="Welcome to Test Formatter!" FontSize="40" FontWeight="Bold" Margin="10"/>
        <TextBlock Text="Please select an option below:" FontSize="20" Margin="10"/>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Name="CreateExam" Content="Create a new exam" Width="150" Margin="0 0 10 0" Click="CreateExam_Click"/>
            <Button Name="LoadExam" Content="Load previous exam" Width="150" Click="LoadExam_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
