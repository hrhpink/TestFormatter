<Window x:Class="TestFormatter.Windows.FileNameInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestFormatter.Windows"
        mc:Ignorable="d"
        Height="100" Width="275" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="File Name:" Height="15" Margin="5"/>
        <TextBox Width="130" Height="20" Text="{Binding Path=fileName}"/>
        <Button Name="ConfirmName" Content="Confirm" Width="50" Height="20" Margin="5" Click="ConfirmName_Click" />
    </StackPanel>
</Window>
